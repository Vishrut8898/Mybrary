<% bookCoverClass = locals.large ? 'book-cover-karge' : 'book-cover' %>
<% bookGridClass = locals.large ? 'book-grid-karge' : '' %>
<div class="book-grid <%= bookGridClass %>">
    <% books.forEach(book => { %>
        <a href="/books/<%= book.id %>">
          <img class="book-cover <%= bookCoverClass %>" src="<%= book.coverImagePath %>">
        </a>
    <% }) %>
</div>